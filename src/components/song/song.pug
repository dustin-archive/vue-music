script#song(type="x/template")
  .song
    .image
      img(v-bind:href="image")
    .title
      h3 {{ title }}
    .author
      p {{ author }}
    .options
      .play
        button(v-on:click="togglePlay()")
          i.material-icons {{ play ? 'pause': 'play_arrow' }}
      .fav
        button(v-on:click="toggleFav()" v-bind:class="fav && 'active'")
          i.material-icons favorite
